using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Object_type_app_01
{
    class Program
    {
        static void Main(string[] args)
        {
            Object a;
            a = 10;
            Console.WriteLine(a);
            Console.WriteLine(a.GetType());//GetType()输出数据类型
            a = true;
            Console.WriteLine(a);
            Console.WriteLine(a.GetType());
            a = 3.14f;
            Console.WriteLine(a);
            Console.WriteLine(a.GetType());
            a = "cheng";
            Console.WriteLine(a);
            Console.WriteLine(a.GetType());
            Console.ReadLine();
        }
    }
}
//Object 类型可以将变量进行任意赋值，但会导致进行大量的类型转换工作，所以在.net2.0后不推荐使用
//The Object type can assign variables to any value, but it can cause a lot of typing, so it's not recommended after. Net2.0
