using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace LoopStatement_for1_
{
    class Program
    {
        static void Main(string[] args)
        {
            int sum = 0;
            int i= 0;
            for(i=1;i<=100;i++)
            {
                sum = sum + i;
            }
            Console.WriteLine("From 1 to 100 , sum = " + sum) ;
            Console.ReadLine();
        }
    }
}
