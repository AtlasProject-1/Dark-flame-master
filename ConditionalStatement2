using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConditionalStatement2
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = 45;
            if(n % 2 == 0)
            {
                Console.WriteLine(n+" is an even num");
            }
            else
            {
                Console.WriteLine(n+" num is a odd num"); 
            }
            Console.ReadLine();

        }
    }
}
